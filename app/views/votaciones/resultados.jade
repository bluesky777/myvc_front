<!-- Page Header ************************************** -->
.page-header.position-relative
<!-- /Page Header ************************************* -->

<!-- Page Body -->
.page-body
	.row
		.col-lg-12.col-sm-12.col-xs-12
			h5.row-title
				i.fa.fa-bar-chart.darkorange
				| Resultados - {{votacion.nombre}}
			.row
				.col-lg-12.col-sm-12.col-xs-12
					.well.with-header
						.header.bordered-purple Tabla de Resultados
						table.table
							thead.bordered-darkorange
								tr
									th
										|Aspiraci√≥n
									th
										|Abreviatura
									th
										|Total votos
							tbody
								tr(ng-repeat-start="aspiracion in aspiraciones")
									td
										|{{aspiracion.aspiracion}}
									td
										|{{aspiracion.abrev}}
									td.success
										|{{aspiracion.candidatos[1].cantidad}}
								tr(ng-repeat-end)
									td(colspan="4")
										table.table.table-hover.table-bordered
											thead
												tr
													th
														|No
													th
														|nombre
													th
														|Votos
											tbody
												tr(ng-repeat="candidato in aspiracion.candidatos")
													td
														|{{$index+1}}
													td
														|{{ candidato.nombres + ' ' + candidato.apellidos }}
													td
														|{{candidato.cantidad}}



