div(ng-class="{'page-carta-horizontal': config.orientacion=='carta_horizontal', 'page-oficio-horizontal': config.orientacion=='oficio_horizontal', 'page-vertical': config.orientacion=='vertical', 'salto-pagina': $parent.$last==false }")
	.row
		.col-lg-12.col-xs-12
			.row.encabezado-puestos
				.col-lg-12.col-xs-12
					.row
						.col-lg-2.col-xs-2
							img.img-responsive.logo-colegio(ng-src="{{perfilPath + year.logo}}")
						.col-lg-8.col-xs-8.title-encabezado-boletin
							.nombre-colegio
								| {{year.nombre_colegio + ' - ' + year.abrev_colegio}}
							.resolucion-colegio
								| {{year.resolucion}}
							.title-descripcion
								|Puestos periodo {{USER.numero_periodo}}-{{USER.year}} Grupo {{grupo.nombre_grupo}}
						.col-lg-2.col-xs-2(style="text-align: right")
							span
								| {{ fechahora | date : 'dd/MM/yyyy h:mma' }}
	.row
		.col-lg-12
			table.table-bordered.table-bordered2.table-striped.table-striped2
				thead
					tr(style="border-bottom: 2px solid;")
						th No
						th Nombres
						th(ng-repeat="asignatura in alumnos[0].asignaturas") {{asignatura.alias_materia}}
						th(style="border-left: 2px solid !important;") Total
				tbody
					tr(ng-repeat="alumno in alumnos | orderBy:'-promedio' | materiasPerdidas:filtrar.materias_perdidas:USER.nota_minima_aceptada")
						td {{$index + 1}}
						td
							.nombresellipsis( uib-popover-template="views+'notas/popoverAlumnoInfo.tpl.html'" 
								popover-title="{{alumno.nombres + ' ' + alumno.apellidos}}" 
								popover-trigger="'mouseenter'" popover-popup-delay="500" popover-append-to-body="true" 
								ng-style="alumno.estado=='ASIS' ? {'font-style': 'italic'} : {}") 
												
								|  {{alumno.nombres + ' ' + alumno.apellidos}}

						td(ng-repeat="asignatura in alumno.asignaturas" ng-class="{'nota-perdida-puestos': ((asignatura.nota_asignatura | number:0 )*1) < (USER.nota_minima_aceptada*1) }")

							span(popover="{{ asignatura.unidades | notasAsignatura:USER.numero_periodo }}" 
								popover-trigger="mouseenter" popover-popup-delay="1000" popover-append-to-body="true")
								| {{asignatura.nota_asignatura | number:0}}
							
							span.cant-unidades-perdidas.puntero(popover="{{ asignatura.unidades | notasPerdidasAsignatura:false:USER.numero_periodo }}" 
								popover-trigger="mouseenter" popover-popup-delay="1000" 
								ng-show="{{asignatura.unidades | notasPerdidasAsignatura:true}} > 0" popover-append-to-body="true")
								| ({{asignatura.unidades | notasPerdidasAsignatura:true}})

						td(style="border-left: 2px solid !important;")
							span {{alumno.promedio | decimales:2}}
							span.cant-unidades-perdidas|({{ alumno.asignaturas | notasPerdidasAsignaturaPeriodo:true:USER.numero_periodo}})
				tfoot
					tr(style="border-top: 2px solid;")
						td   
						td() Total
						td(ng-repeat="asignatura in alumnos[0].asignaturas") {{ alumnos | promAsig:asignatura.asignatura_id | decimales:1 }}
						td(style="font-weight: bold; border-left: 2px solid !important;") {{ alumnos | promGrupoPer | decimales:1 }}
							span.cant-unidades-perdidas|({{alumnos | notasPerdidasGrupoPer}})


