div(ng-class="{'page-carta-horizontal': config.orientacion=='carta_horizontal', 'page-oficio-horizontal': config.orientacion=='oficio_horizontal', 'page-vertical': config.orientacion=='vertical'}")
	.row
		.col-lg-12.col-xs-12
			.row.encabezado-puestos
				.col-lg-12.col-xs-12
					.row
						.col-lg-2.col-xs-2
							img.img-responsive.logo-colegio(ng-src="{{perfilPath + year.logo}}")
						.col-lg-8.col-xs-8.title-encabezado-boletin
							.nombre-colegio
								{{year.nombre_colegio + ' - ' + year.abrev_colegio}}
							.resolucion-colegio
								{{year.resolucion}}
							.title-descripcion
								|Puestos periodo {{USER.periodo_actual}} - {{USER.year}} Grupo {{grupo.nombre}}
	.row
		.col-lg-12
			table.table.table-condensed.table-hover.table-striped
				thead
					th
						td No
						td Nombres
						td(ng-repeat="asignatura in alumnos[0].asignaturas") {{asignatura.alias_materia}}
						td Total
				tbody
					tr(ng-repeat="alumno in alumnos | orderBy:'-promedio'")
						td {{$index + 1}}
						td {{alumno.nombres + ' ' + alumno.apellidos}}
						td(ng-repeat="asignatura in alumno.asignaturas")
							span(popover="{{ asignatura.unidades | notasAsignatura }}" popover-trigger="mouseenter" popover-popup-delay="1000") {{asignatura.nota_asignatura | number:0}}
							//span(popover="{{ asignatura.unidades | notasPerdidasAsignatura }}" ng-show="{{asignatura.unidades | notasPerdidasAsignatura:true}} > 0") ({{asignatura.unidades | notasPerdidasAsignatura:true}})
							span(popover="{{ asignatura.unidades | notasPerdidasAsignatura }}" popover-trigger="mouseenter" popover-popup-delay="1000" ng-show="{{asignatura.unidades | notasPerdidasAsignatura:true}} > 0") ({{asignatura.unidades | notasPerdidasAsignatura:true}})
						td 
							span {{alumno.promedio | number:1}}({{ alumno.asignaturas | notasPerdidasAsignaturaPeriodo:true}})
				tfoot
					tr
						td(colspan="5") Total



