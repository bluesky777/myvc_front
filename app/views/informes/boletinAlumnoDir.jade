div(ng-class="{'boletin-page-horizontal': config.orientacion=='horizontal', 'boletin-page-vertical': config.orientacion=='vertical'}")
	.row
		.col-lg-12.col-xs-12
			.row.encabezado-boletin
				.col-lg-12.col-xs-12
					.row
						.col-lg-1.col-xs-1
							img.logo-colegio(ng-src="{{perfilPath + year.logo}}")
						.col-lg-9.col-xs-9.title-encabezado-boletin
							.nombre-colegio
								h4.title
									{{year.nombre_colegio + ' - ' + year.abrev_colegio}}
							.resolucion-colegio
								{{year.resolucion}}
							.title-descripcion
								|Boletin periodo {{USER.periodo_actual}} - {{USER.year}}
						.col-lg-2.col-xs-2
							img.img-responsive.img-thumbnail.foto-alumno(ng-src="{{perfilPath + alumno.foto_nombre}}")

					.row.descripcion-encabezado
						.col-lg-6.col-xs-6
							.grupo-alumno
								|Grupo: 
								b {{grupo.nombre_grupo}}
							.titular-grupo
								|titular: Pr. {{grupo.nombres_profesor}}
						.col-lg-6.col-xs-6
							h5.nombre-alumno {{alumno.nombres + ' ' + alumno.apellidos}}
			.row.body-boletin
				.col-lg-12.col-xs-12.matierias
					.materia-item(ng-repeat="asignatura in alumno.asignaturas")
						.row.materia-title
							.col-lg-10.col-xs-10
								span.user-name {{asignatura.materia}}
								span.materia-profesor - Pr. {{asignatura.nombres_profesor | capitalize}}
							.col-lg-2.col-xs-2
								.divider
								.type
									{{asignatura.unidades.length}}
						.row.unidades-list
							.col-lg-12.col-xs-12
								.row.unidades-item(ng-repeat="unidad in asignatura.unidades")
									.col-lg-12.col-xs-12
										.row
											.col-lg-10.col-xs-10.unidad-definicion
												{{unidad.definicion_unidad}}
											.col-lg-1.col-xs-1.unidad-porc
												{{unidad.porcentaje_unidad}}%
											.col-lg-1.col-xs-1.unidad-nota
												{{unidad.subunidades.length}}
										.row.subunidades-list(ng-repeat="subunidad in unidad.subunidades")
											.col-lg-12.col-xs-12
												.row
													.col-lg-10.col-xs-10.subunidad-definicion
														{{subunidad.definicion_subunidad}}
													.col-lg-1.col-xs-1.subunidad-porc
														{{subunidad.porcentaje_subunidad}}%
													.col-lg-1.col-xs-1.subunidad-nota
														{{subunidad.nota.nota}}

								.row.comentarios-asignatura
									.col-lg-12.col-xs-12
										.comentario-title Comentarios: 
										.row.comentario-item(ng-repeat="frase in asignatura.frases" style="padding-left: 5px;")
											{{frase.frase}} 
											span.tipo-frase(ng-show="frase.frase_id") - {{frase.tipo_frase}}

							.col-lg-2.col-xs-2
								span
									{{unidad.subunidades.length}}


			.footer-boletin
				h5 Firma directivos