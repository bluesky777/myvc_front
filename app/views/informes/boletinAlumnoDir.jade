div(ng-class="{'page-carta-horizontal': config.orientacion=='carta_horizontal', 'page-oficio-horizontal': config.orientacion=='oficio_horizontal','page-vertical': config.orientacion=='vertical'}")
	.row
		.col-lg-12.col-xs-12
			.row.encabezado-boletin
				.col-lg-12.col-xs-12
					.row
						.col-lg-2.col-xs-2
							img.img-responsive.logo-colegio(ng-src="{{perfilPath + year.logo}}")
						.col-lg-8.col-xs-8.title-encabezado-boletin
							.nombre-colegio
								| {{year.nombre_colegio + ' - ' + year.abrev_colegio}}
							.resolucion-colegio
								| {{year.resolucion}}
							.title-descripcion
								| Boletin periodo {{USER.numero_periodo}} - {{USER.year}}
						.col-lg-2.col-xs-2
							img.img-responsive.img-thumbnail.foto-alumno(ng-src="{{perfilPath + alumno.foto_nombre}}" ng-show="config.mostrar_foto && alumno.foto_id")

					.row.descripcion-encabezado
						.col-lg-6.col-xs-6
							.grupo-alumno
								| Grupo: 
								b {{grupo.nombre_grupo | capitalize}}
							.titular-grupo(popover="<img src='{{perfilPath + grupo.foto_nombre}}' style='width: 150px; height: 150px;'>" 
									popover-popup-delay="1000" popover-title="{{grupo.nombres_profesor + ' ' + grupo.apellidos_profesor}}" popover-animation="true" 
									popover-trigger="mouseenter")
								| Titular: Pr. {{grupo.nombres_profesor + ' ' + grupo.apellidos_profesor | capitalize}}
						.col-lg-6.col-xs-6
							h5.nombre-alumno {{alumno.nombres + ' ' + alumno.apellidos}}
							.promedio-alumno Puntaje: {{alumno.promedio | setDecimal:1 }}% - Puesto: {{alumno.puesto}}/{{grupo.cantidad_alumnos}}
			.row.body-boletin
				.col-lg-12.col-xs-12.materias
					.materia-item(ng-repeat="asignatura in alumno.asignaturas")
						.row.materia-title
							.col-lg-9.col-xs-9(popover="<img src='{{perfilPath + asignatura.foto_nombre}}' style='width: 150px; height: 150px;'>" 
									popover-popup-delay="1000" popover-title="{{asignatura.nombres_profesor + ' ' + asignatura.apellidos_profesor}}" popover-animation="true" 
									popover-trigger="mouseenter")
								span.materia-name {{asignatura.materia}}
								span.materia-profesor - Pr. {{asignatura.nombres_profesor | capitalize}}
							.col-lg-1.col-xs-1
								i.fa.fa-clock-o.icon-tardanza  
								span.text-tardanza {{asignatura.total_ausencias}} 
							.col-lg-1.col-xs-1(ng-class="{'nota-perdida': asignatura.nota_asignatura<USER.nota_minima_aceptada && config.show_rojos}")
								| {{ asignatura.nota_asignatura | juicioValorativo:escalas:true}} 
							.col-lg-1.col-xs-1
								div(ng-class="{'nota-perdida-bold': asignatura.nota_asignatura<USER.nota_minima_aceptada && config.show_rojos}")
									| {{asignatura.nota_asignatura | decimales:1}}
						.row.unidades-list
							.col-lg-12.col-xs-12
								.row.unidades-item(ng-repeat="unidad in asignatura.unidades")
									.col-lg-12.col-xs-12
										.row
											.col-lg-10.col-xs-10.unidad-definicion
												| {{unidad.definicion_unidad}}
											.col-lg-1.col-xs-1.unidad-porc
												| {{unidad.porcentaje_unidad}}%
											.col-lg-1.col-xs-1.unidad-nota
												| {{unidad.nota_unidad}}
										//.row.subunidades-list(ng-repeat="subunidad in unidad.subunidades | orderBy:'orden_subunidad'")
										.row.subunidades-list(ng-repeat="subunidad in unidad.subunidades")
											.col-lg-12.col-xs-12
												.row
													.col-lg-10.col-xs-10.subunidad-definicion
														| {{subunidad.definicion_subunidad}}
													.col-lg-1.col-xs-1.subunidad-porc()
														| {{subunidad.porcentaje_subunidad}}%
													.col-lg-1.col-xs-1.subunidad-nota.puntero
														//i.fa.fa-warning(ng-show="subunidad.nota.nota<USER.nota_minima_aceptada")
														span(ng-class="{'nota-perdida-bold': subunidad.nota.nota<USER.nota_minima_aceptada && config.show_rojos}" tooltip="Valor nota: {{subunidad.nota.valor}}"){{subunidad.nota.nota}}
														//span.label.label-darkpink(ng-show="subunidad.nota.nota<USER.nota_minima_aceptada && config.show_rojos" style="padding: 2px"){{subunidad.nota.nota}}
														//span(ng-show="subunidad.nota.nota<USER.nota_minima_aceptada" tooltip="Valor nota: {{subunidad.nota.valor}}"){{subunidad.nota.nota}}
														span.nota-perdida(ng-show="!subunidad.nota.nota && subunidad.nota.nota!=0" tooltip="Aún sin nota")
															i.fa.fa-warning

								.row.comentarios-asignatura(ng-show="asignatura.frases.length>0")
									.col-lg-12.col-xs-12
										.comentario-title
											i.fa.fa-comments-o(style="padding-right: 5px;")
											| Observaciones
										.row.comentario-item(ng-repeat="frase in asignatura.frases")
											| {{frase.frase}} 
											span.tipo-frase(ng-show="frase.frase_id") - {{frase.tipo_frase}}

							.col-lg-2.col-xs-2
								span
									| {{unidad.nota_unidad}}

			.row.comportamiento-boletin
				.col-lg-12.col-xs-12
					.row.comportamiento-head
						.col-lg-10.col-xs-10.comportamiento-title
							i.fa.fa-male(ng-show="alumno.sexo=='M'" style="padding-right: 5px;") 
							i.fa.fa-female(ng-show="alumno.sexo=='F'" style="padding-right: 5px;") 
							| Comportamiento
						.col-lg-1.col-xs-1.comportamiento-desempenio(ng-class="{'nota-perdida-bold': alumno.comportamiento.nota<USER.nota_minima_aceptada && config.show_rojos}")
							| {{alumno.comportamiento.nota | juicioValorativo:escalas:true}}
						.col-lg-1.col-xs-1.comportamiento-nota(ng-class="{'nota-perdida-bold': alumno.comportamiento.nota<USER.nota_minima_aceptada && config.show_rojos}")
							| {{alumno.comportamiento.nota}}
					.row.comportamiento-body
						.col-lg-10.col-xs-10.comportamiento-frases
							.row(ng-repeat="definicion in alumno.comportamiento.definiciones")
								.col-lg-12.col-xs-12
									| {{definicion.frase}}


			.row.resumen-perdidas(ng-show="alumno.notas_perdidas_year > 0")
				.col-lg-12.col-xs-12
					.row.resumen-head
						.col-lg-12.col-xs-12.resumen-title
							| Notas pendientes del año {{year.year}}
					.row.resumen-body
						.col-lg-10.col-xs-10.resumen-tabla
							table.table-bordered
								thead
									tr
										td No
										td Asignaturas
										td(ng-repeat="periodo in year.periodos")
											| Per{{periodo.numero}}
										td Total
								tbody
									tr(ng-repeat="asignatura_perdida in alumno.asignaturas_perdidas")
										td {{$index + 1}}
										td {{asignatura_perdida.materia | capitalize}}
										td(ng-repeat="periodo in asignatura_perdida.periodos")
											//div {{periodo.unidades | notasPerdidasAsignatura:true}}
											div {{periodo.cantNotasPerdidas}}
										td
											b {{asignatura_perdida.cantTotal}}
								tfoot
									tr
										td(colspan="2")
											| Total
										td(ng-repeat="periodo in alumno.periodos_con_perdidas")
											| {{periodo.cant_perdidas}}
										td
											b {{alumno.notas_perdidas_year}}




			.row.footer-boletin
				.col-lg-12.col-xs-12
					.row
						.col-lg-6.col-xs-6.rector-firma
							img(ng-show="config.show_firma_rector" ng-src="{{perfilPath + year.rector_firma}}")
						.col-lg-6.col-xs-6.titular-firma
							img(ng-show="config.show_firma_titular" ng-src="{{perfilPath + grupo.firma_titular_nombre}}")
					.row
						.col-lg-6.col-xs-6.nombre-rector-firma
							| {{year.nombres_rector}} {{year.apellidos_rector}}
						.col-lg-6.col-xs-6.nombre-titular-firma
							| {{grupo.nombres_profesor}} {{grupo.apellidos_profesor}}

					.row
						.col-lg-6.col-xs-6(ng-show="year.sexo_rector=='M'")
							| Rector
						.col-lg-6.col-xs-6(ng-show="year.sexo_rector=='F'")
							| Rectora

						.col-lg-6.col-xs-6
							| Titular




